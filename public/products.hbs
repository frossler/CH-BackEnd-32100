<h1 class="table" style="font-size: revert; margin-top: 50px; display: flex; justify-content: center;">Products</h1>

{{#if products.length}}
    <div>
        <table style="margin: 30px; display: flex; justify-content: center; background-color: #e2e6ea;">
            <tr style="font-size: 25px;">
                <th style="width: 450px;">Name</th>
                <th style="width: 450px;">Price</th>
                <th style="width: 450px;">Image</th>
            </tr>
    {{#each products}}
            <tr style="display: flex; justify-content: space-around; margin-top: 30px;">
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img width="50" src={{this.thumbnail}} alt={{this.id}}></td>
            </tr>
    {{/each}}
        </table>
    </div>
    <button class="btnVolver"><a href="/">Go Back</a></button>
    {{else}}
<h3 style="margin-top: 50px; display: flex; justify-content: center; font-style: italic; color: red; font-size: initial;"> No products added yet.</h3>
{{/if}}